{
  "name": "zareismail/nova-trust",
  "description": "A Laravel Nova tool for `ACL` based on `laratrust` package.",
  "keywords": [
    "laravel",
    "nova",
    "acl",
    "nova-trust",
    "permission",
    "role",
    "policy",
    "gate"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.0.0",
    "santigarcor/laratrust": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "NovaTrust\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "NovaTrust\\ToolServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
